<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.code.fastframe.com.code.demo.demo.SPUtilsActivity"
    >

    <EditText
        android:id="@+id/key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="key:"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="value:"
        android:textSize="20sp"
        />

    <com.code.fastframe.widgets.SuperButton
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:text="save"
        android:textColor="@color/white"
        stv:sCornersRadius="5dp"
        stv:sSelectorNormalColor="@color/colorAccent"
        stv:sSelectorPressedColor="@color/line"
        stv:sUseSelector="true"
        />

    <com.code.fastframe.widgets.SuperButton
        android:id="@+id/get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:text="get"
        android:textColor="@color/white"
        stv:sCornersRadius="5dp"
        stv:sSelectorNormalColor="@color/colorAccent"
        stv:sSelectorPressedColor="@color/line"
        stv:sUseSelector="true"
        />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        />
</LinearLayout>
