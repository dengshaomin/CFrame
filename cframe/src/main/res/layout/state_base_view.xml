<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <include
        layout="@layout/state_loading_view"
        />

    <ViewStub
        android:id="@+id/vstub_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout="@layout/state_empty_view"
        />

    <ViewStub
        android:id="@+id/vstub_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout="@layout/state_error_view"
        />

    <ViewStub
        android:id="@+id/vstub_net"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout="@layout/state_net_view"
        />
</RelativeLayout>